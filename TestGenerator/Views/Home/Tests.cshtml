@model TestGenerator.Core.ViewModels.TestsViewModel
@{
    ViewBag.Title = "Home Page";
}
<h1>@Model.Heading</h1>

<ul id="tests" class="tests voffset4">
    @foreach (var test in Model.Tests)
    {
        <li>
            <div class="date">
                <div class="month">
                    @test.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @test.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="operator">
                     @test.Name
                </span>
                <span class="testStatus">
                    @test.Operator.NickName
                </span>
            </div>
        </li>
    }
</ul>